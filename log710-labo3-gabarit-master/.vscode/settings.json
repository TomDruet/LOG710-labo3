{
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "type_traits": "c",
        "array": "c",
        "atomic": "c",
        "*.tcc": "c",
        "concepts": "c",
        "new": "c",
        "numeric": "c",
        "ostream": "c",
        "system_error": "c",
        "functional": "c",
        "tuple": "c",
        "utility": "c"
    },
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-tidy.lintOnSave": true,
    "clang-tidy.compilerArgs": [
        "-Wall",
        "-Wextra",
        "-Werror=vla",
        "-Werror=alloca",
        "-Werror=main",
        "-std=gnu11",
        "-ggdb"
    ]
}